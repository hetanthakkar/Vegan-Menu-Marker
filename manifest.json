{
  "manifest_version": 3,
  "name": "Vegan Menu Marker for Google Maps",
  "version": "1.0",
  "description": "Automatically marks vegan dishes with ðŸŒ± emoji on Google Maps restaurant menus",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*",
        "https://maps.google.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Vegan Menu Marker",
    "default_icon": {
      "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.google.com/*",
    "https://maps.google.com/*"
  ]
}
